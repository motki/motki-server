{% block background_url %}https://imageserver.eveonline.com/Corporation/98513229_128.png{% endblock %}

{% block additional_stylesheets %}
    <style>
        body > .container::after {
            content: "";
            opacity: 0.05;
            top: 0;
            margin: -50px auto;
            transform: translateX(-100px);
            width: 512px;
            height: 512px;
            position: absolute;
            z-index: -1;
            background-image: url('{{ block('background_url') }}');
            background-repeat: no-repeat;
            background-size: cover;
        }

        @media (max-width: 500px) {
            body > .container::after {
                opacity: 0;
            }
        }
    </style>
{% endblock %}