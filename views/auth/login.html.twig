{% extends 'base.html.twig' %}

{% block title %}Sign in{% endblock %}

{% block content %}
<h1>Sign in <small>or register</small></h1>

<div class="row">
    <div class="col-md-4 col-sm-6">
        <p class="lead">Already registered?</p>
            {% if login_error %}
        <p class="text-danger">Oops, {{ login_error }}. Try again.</p>
            {% else %}
        <p>Enter your credentials below.</p>
            {% endif %}
        <form class="form-horizontal" action="/login/finish" method="post">
            <div class="form-group">
                <label for="username" class="col-sm-3 control-label">Username</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="username" id="username" placeholder="Username">
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-3 control-label">Password</label>
                <div class="col-sm-9">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <input type="hidden" name="_token" value="{{ csrf_token }}">
                    <button type="submit" class="btn btn-default">Sign in</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-6 col-md-offset-2">
        <div class="well">
            <p class="lead">Create an account</p>
            {% if register_error %}
                <p class="text-danger">Uh-oh, {{ register_error }}.</p>
            {% else %}
                <p>
                    Creating a new account is pretty straight-forward. After your email is verified,
                    you can link your user with EVE accounts to access various functionality.
                </p>
            {% endif %}
            <form class="form-horizontal" action="/register" method="post">
                <div class="form-group">
                    <label for="register_username" class="col-sm-3 control-label">Username</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="username" id="register_username" placeholder="Username">
                    </div>
                </div>
                <div class="form-group">
                    <label for="register_email" class="col-sm-3 control-label">Email</label>
                    <div class="col-sm-9">
                        <input type="email" class="form-control" name="email" id="register_email" placeholder="Email address">
                        <span class="help-block">Your email address is collected solely for the purpose of user authentication.</span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="register_password" class="col-sm-3 control-label">Password</label>
                    <div class="col-sm-9">
                        <input type="password" class="form-control" name="password" id="register_password" placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <input type="hidden" name="_token" value="{{ register_token }}">
                        <button type="submit" class="btn btn-default">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


{% endblock %}