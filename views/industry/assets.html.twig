{% extends 'base.html.twig' %}

{% block title %}Assets{% endblock %}

{% block content %}
<h1>Industry <small>Corporation Structures</small> <div class="btn-group pull-right"><a href="/industry/" class="btn btn-default">Industry Jobs</a><a href="/industry/blueprints" class="btn btn-default">Blueprints</a></div></h1>
<div class="row">
    <div class="col-sm-12">
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Item ID</th>
            <th>Location ID</th>
            <th>System</th>
            <th>Type</th>
            <th>Type ID</th>
            <th>Qty</th>
            <th>Raw Qty</th>
            <th>Singleton</th>
            <th>Flag</th>
        </tr>
        </thead>
        <tbody>
        {% for s in assets %}
        <tr>
            <td>{{ s.ItemID }}</td>
            <td>{{ s.LocationID }}</td>
            <td>{{ helper.GetAssetSystem(s) }}</td>
            <td>{{ helper.GetTypeInt(s.TypeID) }}</td>
            <td>{{ s.TypeID }}</td>
            <td>{{ s.Quantity }}</td>
            <td>{{ s.RawQuantity }}</td>
            <td>{{ s.Singleton }}</td>
            <td>{{ s.FlagID }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}
