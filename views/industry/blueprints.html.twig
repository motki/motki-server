{% extends 'base.html.twig' %}

{% block title %}Blueprints{% endblock %}

{% use '_motki_bg.html.twig' %}

{% block background_url %}{{ corp_logo_url(corp_id, 128) }}{% endblock %}

{% block content %}
<h1>Industry <small>Corporation Blueprints</small> <div class="btn-group pull-right"><a href="/industry/" class="btn btn-default">Industry Jobs</a><a href="/industry/structures" class="btn btn-default">Structures</a><a href="/industry/assets" class="btn btn-default">Assets</a></div></h1>
<div class="row">
    <div class="col-sm-12">
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Type</th>
            <th>C/O</th>
            <th>ME/TE</th>
            <th>Runs</th>
        </tr>
        </thead>
        <tbody>
        {% for bp in bps %}
        <tr>
            <td>{{ bp.TypeName }}</td>
            <td>{{ (bp.Quantity == -2) ? 'Copy' : 'Original' }}</td>
            <td>{{ bp.MaterialEfficiency }}/{{ bp.TimeEfficiency }}</td>
            <td>{{ (bp.Runs == -1) ? 'âˆž' : bp.Runs }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="text-center">
        <div class="col-sm-10 col-sm-offset-1 text-center">
            <a href="/industry/blueprints?page={{ page-1 }}" class="btn btn-primary{% if page == 1 %} disabled{% endif %}">&lt; Back</a>
            <a href="/industry/blueprints?page={{ page+1 }}" class="btn btn-primary{% if ((page*50)+50) > total %} disabled{% endif %}">Next &gt;</a>
        </div>
    </div>
    </div>
</div>
{% endblock %}
