{% extends 'base.html.twig' %}

{% block title %}Structures{% endblock %}

{% use '_motki_bg.html.twig' %}

{% block background_url %}{{ corp_logo_url(corp_id, 128) }}{% endblock %}

{% block content %}
<h1>Industry <small>Corporation Structures</small> <div class="btn-group pull-right"><a href="/industry/" class="btn btn-default">Industry Jobs</a><a href="/industry/blueprints" class="btn btn-default">Blueprints</a><a href="/industry/assets" class="btn btn-default">Assets</a></div></h1>
<div class="row">
    <div class="col-sm-12">
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>System</th>
            <th>Type</th>
            <th>Curr Vuln</th>
            <th>Next Vuln</th>
        </tr>
        </thead>
        <tbody>
        {% for s in structures %}
        <tr>
            <td>{{ helper.GetSystem(s.SystemID) }}</td>
            <td>{{ helper.GetType(s.TypeID) }}</td>
            <td>{{ s.CurrentVuln }}</td>
            <td>{{ s.NextVuln }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="text-center">
        <div class="col-sm-10 col-sm-offset-1 text-center">
            <a href="/industry/structures?page={{ page-1 }}" class="btn btn-primary{% if page == 1 %} disabled{% endif %}">&lt; Back</a>
            <a href="/industry/structures?page={{ page+1 }}" class="btn btn-primary{% if ((page*50)+50) > total %} disabled{% endif %}">Next &gt;</a>
        </div>
    </div>
    </div>
</div>
{% endblock %}
