{% extends 'base.html.twig' %}

{% block title %}Structures{% endblock %}

{% block content %}
<h1>Industry <small>Corporation Structures</small> <div class="btn-group pull-right"><a href="/industry/" class="btn btn-default">Industry Jobs</a><a href="/industry/blueprints" class="btn btn-default">Blueprints</a></div></h1>
<div class="row">
    <div class="col-sm-12">
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>System</th>
            <th>Type</th>
            <th>Curr Vuln</th>
            <th>Next Vuln</th>
        </tr>
        </thead>
        <tbody>
        {% for s in structures %}
        <tr>
            <td>{{ helper.GetSystem(s.SystemID) }}</td>
            <td>{{ helper.GetType(s.TypeID) }}</td>
            <td>{{ s.CurrentVuln }}</td>
            <td>{{ s.NextVuln }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}
